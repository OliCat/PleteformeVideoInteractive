# Environment Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/video-platform

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d

# Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=500000000
ALLOWED_VIDEO_FORMATS=mp4,avi,mov,mkv,webm

# Video Processing
FFMPEG_PATH=/usr/bin/ffmpeg
VIDEO_QUALITY_LEVELS=480p,720p,1080p

# Security - Rate Limiting
# Limite générale pour toutes les routes API
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=500

# Limite spécifique pour les routes de progression (tracking vidéo fréquent)
# Recommandé: 1000 pour permettre ~66 requêtes/min (sauvegarde toutes les 10 secondes)
RATE_LIMIT_PROGRESS_MAX=1000

# Limite pour l'authentification (protection brute force supplémentaire)
# Recommandé: 50 tentatives / 15 min (la protection brute force côté auth gère déjà cela)
RATE_LIMIT_AUTH_MAX=50

# Limite pour l'upload de vidéos (opérations longues)
# Recommandé: 10 uploads / heure par IP
RATE_LIMIT_UPLOAD_MAX=10

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Email Configuration (optionnel pour notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Admin User (création automatique au démarrage)
ADMIN_EMAIL=admin@cooperative.local
ADMIN_PASSWORD=admin123
ADMIN_USERNAME=admin 